<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_main_card"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/btn_main_bell"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bell"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_main_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="3"
        android:text="STAGE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_main_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="SCORE"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_main_stage" />

    <ImageView
        android:id="@+id/img_main_first_cup"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/img_main_red_cup"
        app:layout_constraintEnd_toStartOf="@id/img_main_second_cup"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_main_card"
        android:background="@drawable/empty_image_background"/>

    <ImageView
        android:id="@+id/img_main_second_cup"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/img_main_red_cup"
        app:layout_constraintEnd_toStartOf="@id/img_main_third_cup"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/img_main_first_cup"
        app:layout_constraintTop_toBottomOf="@id/img_main_card"
        android:background="@drawable/empty_image_background"/>

    <ImageView
        android:id="@+id/img_main_third_cup"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/img_main_red_cup"
        app:layout_constraintEnd_toStartOf="@id/img_main_fourth_cup"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/img_main_second_cup"
        app:layout_constraintTop_toBottomOf="@id/img_main_card"
        android:background="@drawable/empty_image_background"/>

    <ImageView
        android:id="@+id/img_main_fourth_cup"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/img_main_red_cup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/img_main_third_cup"
        app:layout_constraintTop_toBottomOf="@id/img_main_card"
        android:background="@drawable/empty_image_background"/>

    <ImageView
        android:id="@+id/img_main_red_cup"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_main_green_cup"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_main_green_cup"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/green_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_main_blue_cup"
        app:layout_constraintStart_toEndOf="@id/img_main_red_cup" />

    <ImageView
        android:id="@+id/img_main_blue_cup"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_main_black_cup"
        app:layout_constraintStart_toEndOf="@id/img_main_green_cup" />

    <ImageView
        android:id="@+id/img_main_black_cup"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/black_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_main_blue_cup" />


</android.support.constraint.ConstraintLayout>